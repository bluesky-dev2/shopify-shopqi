=content_tag_for :tr, page, class: cycle(:odd, :even) do
  %td= link_to page.title, page_path(page), :title => "handle: #{page.title}"
  %td.date(style="text-align: right")=page.updated_at.to_s(:full)
  %td(style="text-align: center")
    = link_to image_tag('admin/icons/trash.gif'), page_path(page), remote: true, method: :delete, confirm: '您确定要删除?', title: '删除它', class: :del
