!!! 5
- conditional_html do
  %head
    %meta(content="text/html; charset=utf-8" http-equiv="Content-Type")
    %meta(name="robots" content="nofollow")
    %link(href="#{image_path('favicon.png')}" rel="shortcut icon" type="image/x-icon")/
    %title ShopQi 主题商店 | 电子商务模板
    = stylesheet_link_tag "layout_shopqi_theme"
    = javascript_include_tag :shopqi_application
    /[if lt IE 7]
      = javascript_include_tag 'DD_belatedPNG_0.0.8a-min'
      :javascript
        DD_belatedPNG.fix('.png_bg');
    /[if lt IE 8]
      = stylesheet_link_tag 'ie7-themes'
    /[if IE]
      = stylesheet_link_tag 'ie-themes'
    -#=render 'shared/google'
  %body
    .resources-nav
      %ul
        %li.logo
          %a{href: url_with_port, style: "filter:none"}=image_tag 'resources-nav/logo-shopqi.png'
        -#
          %li
            %a(href="#" title="ShopQi App Store") 应用
        %li.current=link_to '主题外观', theme_store_url_with_port
        %li=link_to '帮助文档',"#{wiki_url_with_port}"
        -#
          %li
            %a(href="http://support.shopqi.com/" title="ShopQi &mdash; Support") 支持
          %li
            %a(href="http://forums.shopqi.com/" title="ShopQi论坛") 论坛
          %li
            %a(href="#{wiki_url_with_port}/" title="首页 - 帮助文档") 帮助文档
    .vig-left
    .vig-right
    #wrapper
      #header
        #navigation.clearfix
          %a.logo.png_bg(href="/")=image_tag 'logos/logo-themestore.png'
          %ul
            %li
              %a(href="#") 主题指南
            %li
              %a(href="#") 提交主题
            =yield :login
        =yield :filter
      #content(class=@content_class)
        =yield
    =render 'shared/baidu'
