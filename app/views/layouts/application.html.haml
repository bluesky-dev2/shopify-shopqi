  !!!
  %html{:lang => "en", :style => "zoom: 100%; ", "xml:lang" => "en", :xmlns => "http://www.w3.org/1999/xhtml"}
    %head
      %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
      %meta{:content => "", :name => "keywords"}/
      %meta{:content => "", :name => "description"}/
      %title Shopify — Signup
      = stylesheet_link_tag "master","message_block"
