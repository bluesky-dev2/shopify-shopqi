        = stylesheet_link_tag "ie6"
      /[if IE 7]
        = stylesheet_link_tag "ie6"
      /[if IE]
        = stylesheet_link_tag "ie-signup"      
    %body
      #wrapper
        #masthead
          .content
            %a.logo-shopify{:href => "http://www.shopify.com/"} Shopify
            %ul#nav-primary
              %li
                %a{:href => "http://www.shopify.com/tour/"} Feature Tour
              %li
                %a{:href => "http://www.shopify.com/examples/"} Examples
              %li
                %a{:href => "http://www.shopify.com/faq/"} FAQ
              %li.current
                %a{:href => "https://www.shopify.com/signup/"} Pricing &amp; Signup
              %li.sub-nav
                %ul.utilities
                  %li.megadropdown
                    %a{:href => "https://www.shopify.com/services/signup/new/basic#"} Resources
                    %ul
                      %li
                        %a{:href => "http://support.myshopify.com/", :title => "Welcome - Shopify Support"}
                          %strong> Support
                          Talk to Shopify Support
                      %li
                        %a{:href => "http://wiki.shopify.com/", :title => "Main Page - Shopify Wiki"}
                          %strong> Documentation
                          Learn about Shopify
                      %li
                        %a{:href => "http://forums.shopify.com/", :title => "Shopify Community"}
                          %strong> Forums
                          The Shopify community
                      %li
                        %a{:href => "http://apps.shopify.com/", :title => "Shopify Application Store"}
                          %strong> Apps
                          Apps for your shop
                      %li
                        %a{:href => "http://themes.shopify.com/", :title => "Shopify Theme Store"}
                          %strong> Themes
                          Themes for your shop
                  %li.last
                    %a{:href => "http://www.shopify.com/login/"} Login
        =yield
      #footer
        #footer-wrapper
          .content
            .col-3
              %h3 Features
              %ul
                %li
                  %a{:href => "#"} Overview
            .col-3
              %h3 Resources
              %ul
                %li
                  %a{:href => "#"} Shopify Wiki
            .col-3
              %h3 Shopify
              %ul
                %li
                  %a{:href => "http://blog.shopify.com/"} Blog
            .col-3.contact-us.last
              %h3 Contact us
              %ul
                %li
                  %img{:alt => "Phone16", :height => "12", :src => "/images/admin/icons/phone16.gif", :width => "12"}/
                  1.888.746.7439
