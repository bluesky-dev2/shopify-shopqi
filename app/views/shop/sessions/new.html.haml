#template
  #customer
    .template_header
      %h2.title 顾客登陆
    =form_for(resource, url: session_path(resource_name)) do |f|
      =hidden_field_tag :checkout_url, checkout_url
      #login_email.clearfix.large_form
        =f.label :email
        =f.text_field :email, class: 'large'
      #login_password.clearfix.large_form
        =f.label :password
        =f.password_field :password, class: 'large'
        #forgot_password
          %a{:href => "#", :onclick => "document.getElementById('recover-password').style.display='inline-block'; document.getElementById('customer').style.display='none';return false;"} 忘记密码?
      .action_bottom
        =f.submit '登录',class: 'btn'
        %span.note
          =w('or')
          =link_to '返回商店',show_shop_url
  #recover-password{:style => "display:none"}
    .template_header
      %h2.title 忘记密码？
      %p.note 在下面输入 邮箱地址 我们马上会发送邮件，告诉您如何找回密码!
    =form_for(resource, url: password_path(resource_name)) do |f|
      =hidden_field_tag :checkout_url, checkout_url
      #recover_email.clearfix.large_form
        =f.label :email, class: 'large'
        =f.text_field :email, class: 'large'
      .action_bottom
        %input.btn{:type => "submit", :value => "提交"}/
        %span
          =w('or')
          %a{:href => "#", :onclick => "document.getElementById('recover-password').style.display='none'; document.getElementById('customer').style.display='inline-block';return false;"}=w('cancel')
  -if shop.customer_accounts_optional?
    #guest
      .template_header
        %h3.title 游客访问
      =form_for(resource, url: session_path(resource_name)) do |f|
        %input{:name => "guest", :type => "hidden", :value => "true"}/
        =hidden_field_tag :checkout_url, checkout_url
        %input.btn{:type => "submit", :value => "继续以游客身份购物"}/
