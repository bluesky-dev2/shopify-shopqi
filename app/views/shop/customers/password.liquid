<div id="template">
  
  {% if response_state == 'account_declined' %}
    
    <p>您已经拒绝帐号激活的邀请.</p>
    
    <div class="action_bottom">
      <span class="note"><a href="{{ shop.url }}">返回商店</a></span>
    </div>
    
  {% elsif response_state == 'invalid_token' %}
  
    <p>邀请码无效或已经过期.</p>

    <div class="action_bottom">
      <a href="/account/login?recover" class="btn" id="badtoken">申请新的邀请码</a>
      <span class="note">or <a href="{{ shop.url }}">返回商店</a></span>
    </div>
  
  {% elsif response_state == 'activate_account' %}
  
    {% comment %} 激活顾客帐号表单 {% endcomment %}
    <div class="template_header">
      <h2 class="title">激活帐号</h2>
      <p class="note">输入密码激活帐号</p>
    </div>
    {% form 'activate_customer_password' %}
      <div id="password" class="clearfix large_form">
        <label class="large" for="password">密码</label>
        <input type="password" value="" name="customer[password]" id="customer_password" class="large password" size="16" />
      </div>
      <div id="password_confirm" class="clearfix large_form">
        <label class="large" for="password_confirmation">确认密码</label>
        <input type="password" value="" name="customer[password_confirmation]" id="customer_password_confirmation" class="large password" size="16" />
      </div>
      <div class="action_bottom">
        <input class="btn" type="submit" value="激活帐号" />
        <span class="note">或者</span>
        <input type="submit" class="cancel" name="decline" id="customer_decline" value="拒绝邀请" />
      </div>
    {% endform %}
    
  {% elsif response_state == 'reset_password' %}
  
    {% comment %} 重置密码表单 {% endcomment %}  
    <div class="template_header">
      <h2 class="title">重置帐号密码</h2>
      <p class="note">请输入新的密码 {{ email }}</p>
    </div>
    {% form 'reset_customer_password' %}
      <div id="password" class="clearfix large_form">
        <label class="large" for="password">密码</label>
        <input type="password" value="" name="customer[password]" id="customer_password" class="large password" size="16" />
      </div>
      <div id="password_confirm" class="clearfix large_form">
        <label class="large" for="password_confirmation">确认密码</label>
        <input type="password" value="" name="customer[password_confirmation]" id="customer_password_confirmation" class="large password" size="16" />
      </div>
      <div class="action_bottom">
        <input class="btn" type="submit" value="重置密码" />
      </div>
    {% endform %}
  
  {% endif %}
  
</div>
