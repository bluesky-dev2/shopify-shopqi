    .resources-nav
      %ul
        %li.logo
          %a(href="http://shopify.com/resources")
            %img(src="/images/resources-nav/logo-shopify.png")/
        %li
          %a(href="http://apps.shopify.com/" title="ShopQi App Store") Apps
        %li.current
          %a(href="http://themes.shopify.com/" title="Home") Themes
        %li
          %a(href="http://support.myshopify.com/" title="ShopQi &mdash; Support") Support
        %li
          %a(href="http://forums.shopify.com/" title="ShopQi Community") Forums
        %li
          %a(href="http://wiki.shopify.com/" title="Main Page - ShopQi Wiki") Wiki
    / .resources-nav
    .vig-left
    / .vig-left
    .vig-right
    / .vig-right
