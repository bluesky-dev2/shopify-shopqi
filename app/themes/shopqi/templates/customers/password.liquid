<div id="template">
  
  {% if response_state == 'account_declined' %}
    
    <p>You have declined your account invitation.</p>
    
    <div class="action_bottom">
      <span class="note"><a href="{{ shop.url }}">Return to Store</a></span>
    </div>
    
  {% elsif response_state == 'invalid_token' %}
  
    <p>Invalid or expired activation token.</p>

    <div class="action_bottom">
      <a href="/account/login?recover" class="btn" id="badtoken">Request New Activation Token</a>
      <span class="note">or <a href="{{ shop.url }}">Return to Store</a></span>
    </div>
  
  {% elsif response_state == 'activate_account' %}
  
    {% comment %} Activate Customer Account Form {% endcomment %}
    <div class="template_header">
      <h2 class="title">Activate Account</h2>
      <p class="note">Create your password to activate your account</p>
    </div>
    {% form 'activate_customer_password' %}
      <div id="password" class="clearfix large_form">
        <label class="large" for="password">Password</label>
        <input type="password" value="" name="customer[password]" id="customer_password" class="large password" size="16" />
      </div>
      <div id="password_confirm" class="clearfix large_form">
        <label class="large" for="password_confirmation">Password Confirmation</label>
        <input type="password" value="" name="customer[password_confirmation]" id="customer_password_confirmation" class="large password" size="16" />
      </div>
      <div class="action_bottom">
        <input class="btn" type="submit" value="Activate Account" />
        <span class="note">or</span>
        <input type="submit" class="cancel" name="decline" id="customer_decline" value="Decline Invitation" />
      </div>
    {% endform %}
    
  {% elsif response_state == 'reset_password' %}
  
    {% comment %} Reset Password Form {% endcomment %}  
    <div class="template_header">
      <h2 class="title">Reset Account Password</h2>
      <p class="note">Enter a new password for {{ email }}</p>
    </div>
    {% form 'reset_customer_password' %}
      <div id="password" class="clearfix large_form">
        <label class="large" for="password">Password</label>
        <input type="password" value="" name="customer[password]" id="customer_password" class="large password" size="16" />
      </div>
      <div id="password_confirm" class="clearfix large_form">
        <label class="large" for="password_confirmation">Password Confirmation</label>
        <input type="password" value="" name="customer[password_confirmation]" id="customer_password_confirmation" class="large password" size="16" />
      </div>
      <div class="action_bottom">
        <input class="btn" type="submit" value="Reset Password" />
      </div>
    {% endform %}
  
  {% endif %}
  
</div>