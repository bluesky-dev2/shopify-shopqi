body {
	color: {{ settings.text_color }};
	font-family: {{ settings.typography }};
	background-color: {{ settings.footer_bg_color }};
}

div.content, div#finder {
	background-color: {{ settings.bg_color }};
}

a {
	color: {{ settings.link_color }};
	text-decoration: none;
}

a:hover {
	color: {{ settings.link_hover }};
	text-decoration: underline;
}

div#header {
	{% if settings.header_bg_image == "none" %}background-image: none;
	background-color: {{ settings.header_bg_color }};
	{% else %}background: {{ settings.header_bg_color }} url({{ settings.header_bg_image | asset_url }}) {{ settings.header_bg_repeat }} {{ settings.header_bg_position }};{% endif %}
}

div#header h2, div#gocart p, div#intro h1, div#details h1, div#details h2, div#buy h6, div#thumbs h6 span, div#cart h1, div#unfound h1, div#total h3, div#comments form label span, div.entry h2.title, div.entry h5.posted, div#comments h3 span, div.comment h6.author, div#page div#main h1, div#excerpt h1.title, div#collections-listing h2, div#search h1, div#posts div.post h6, div#overview li h3 {
	font-style: {{ settings.font_style }};
}

div#header h2 {
	{% if settings.title_bg_image == "none" %}background-image: none;
	background-color: {{ settings.title_bg_color }};
	{% else %}background: {{ settings.title_bg_color }} url({{ settings.title_bg_image | asset_url }}) no-repeat;{% endif %}
}

div#header h2 a, div#header h2 a:hover {
	color: {{ settings.title_color }};
}

div.logo {
	background-color: {{ settings.logo_bg_color }};
}

div#gocart {
	{% if settings.gocart_bg_image == "none" %}background-image: none;
	background-color: {{ settings.gocart_bg_color }};
	{% else %}background: {{ settings.gocart_bg_color }} url({{ settings.gocart_bg_image | asset_url }}) no-repeat;{% endif %}
}

div#gocart p {
	color: {{ settings.gocart_text_color }};
}

div#gocart p a {
	color: {{ settings.gocart_link_color }};
}

div#gocart p a:hover {
	color: {{ settings.gocart_link_hover_color }};
}

ul#nav li a {
	color: {{ settings.nav_link_color }};{% if settings.nav_link_bg_image == "none" %}
	background-image: none;
	background-color: {{ settings.nav_link_bg_color }};{% else %}
	background: {{ settings.nav_link_bg_color }} url({{ settings.nav_link_bg_image | asset_url }}) repeat-x;{% endif %}
}

ul#nav li a:hover {
	color: {{ settings.nav_link_hover }};{% if settings.nav_link_hover_bg_image == "none" %}
	background-color: {{ settings.nav_link_hover_bg_color }};{% else %}
	background: {{ settings.nav_link_hover_bg_color }} url({{ settings.nav_link_hover_bg_image | asset_url }}) repeat-x;{% endif %}
}

ul#nav li a.active, ul#nav li a.active:hover {
	color: {{ settings.nav_active_link_color }};{% if settings.nav_active_link_bg_image == "none" %}
	background-image: none;
	background-color: {{ settings.nav_active_link_bg_color }};{% else %}
	background: {{ settings.nav_active_link_bg_color }} url({{ settings.nav_active_link_bg_image | asset_url }}) repeat-x;{% endif %}
}

div#finder div.container {
	border-bottom: 1px {{ settings.finder_border_style }} {{ settings.finder_border_color }};
	border-right: 1px {{ settings.finder_border_style }} {{ settings.finder_border_color }};
	border-left: 1px {{ settings.finder_border_style }} {{ settings.finder_border_color }};
}

div#finder div.container div {
	{% if settings.finder_bg_image == "none" %}background-image: none;
	background-color: {{ settings.finder_bg_color }};
	{% else %}background: {{ settings.finder_bg_color }} url({{ settings.finder_bg_image | asset_url }}) {{ settings.finder_bg_repeat }} {{ settings.finder_bg_position }};{% endif %}
}

div#finder input.field {
	color: {{ settings.finder_text_color }};
	font: italic 13px {{ settings.typography }};
}

div#finder input.field:focus {
	color: {{ settings.finder_text_focus_color }};
}

div#intro, div#excerpt, div#search h1, div#collections-listing h2, div#subnav, div#cart h1, div#unfound h1, div#total h3, div.entry {
	border-bottom: 1px {{ settings.borders_style }} {{ settings.borders_color }};
}

div#intro h1, div#buy h6, div#cart h1, div#unfound h1, div#comments p#posted, div#comments p#error {
	color: {{ settings.alt_text_color }};
}

div#intro h1 a, div#subnav p, div#subnav a.active, div#subnav a.active:hover {
	color: {{ settings.text_color }};
}

div#subnav {
	color: {{ settings.borders_color }};
}

ul#products div.image, ul#results div.image, ul#results div.desc, div#variants div#bg, div#image img, div#thumbs li img, div#cart td.pic img {
	background-color: {{ settings.img_bg_color }};
}

ul#products li h3, ul#results li h3 {
	{% if settings.price_image == "none" %}background-image: none;
	{% else %}background: url({{ settings.price_image | asset_url }}) no-repeat;{% endif %}
}

div#paginate div, div#total h3, div#article div#main p#closed, div#comments h3 {
	border-top: 1px {{ settings.borders_style }} {{ settings.borders_color }};
}

div#details h2, div#thumbs h6 span, div#comments form label span, div.entry h5.posted, div#comments h3 span {
	color: {{ settings.accent_text_color }};
}

div#details h2 del {
	color: {{ settings.alt_accent_text_color }};
}

div#cart tr.odd th, div#cart tr.odd td {
	background-color: {{ settings.cart_odd_bg_color }};
}

div#cart tr.even th, div#cart tr.even td {
	background-color: {{ settings.cart_even_bg_color }};
}

div#cart tr.odd td.pic img {
	background-color: {{ settings.cart_odd_img_bg_color }};
}

div#cart tr.even td.pic img {
	background-color: {{ settings.cart_even_img_bg_color }};
}

div#cart td {
	border-top: 1px solid {{ settings.cart_row_border_color }};
}

div#notes textarea, div#cart td input.field {
	color: {{ settings.finder_text_focus_color }};
	font: 13px {{ settings.typography }};
}

div.comment {
	border-bottom: 1px {{ settings.comment_border_style }} {{ settings.comment_border_color }};
}

div.entry h5.posted span {
	background: url({{ settings.bubble_image | asset_url }}) no-repeat 8px center;
}

div#sidebar div.bg {
	background-color: {{ settings.sidebar_bg_color }};
}

div#sidebar h3, div#posts div.post, div#featured div.product {
	border-bottom: 1px {{ settings.sidebar_border_style }} {{ settings.sidebar_border_color }};
}

div#sidebar h3 {
	color: {{ settings.sidebar_title_text_color }};
}

div#featured div.end {
	border-bottom: none;
}

div#posts div.post h6, div#featured div.title h6 {
	color: {{ settings.sidebar_accent_text_color }};
}

div#posts p, div#featured p {
	color: {{ settings.sidebar_text_color }};
}

div#sidebar h5 a, div#sidebar p a {
	color: {{ settings.sidebar_link_color }};
}

div#sidebar h5 a:hover, div#sidebar p a:hover {
	color: {{ settings.sidebar_link_hover }};
}

div#featured div.image img {
	background-color: {{ settings.sidebar_img_bg_color }};
}

div#overview {
	{% if settings.overview_bg_image == "none" %}background-image: none;
	background-color: {{ settings.overview_bg_color }};
	{% else %}background: {{ settings.overview_bg_color }} url({{ settings.overview_bg_image | asset_url }}) {{ settings.overview_bg_repeat }} {{ settings.overview_bg_position }};{% endif %}
}

div#overview li h3 {
	color: {{ settings.overview_title_text_color }};
}

div#overview ul.titles {
	border-bottom: 1px {{ settings.overview_border_style }} {{ settings.overview_border_color }};
}

div#overview p, div#overview label {
	color: {{ settings.overview_text_color }};
}

div#overview h5 a, div#overview p a {
	color: {{ settings.overview_link_color }};
}

div#overview h5 a:hover, div#overview p a:hover {
	color: {{ settings.overview_link_hover }};
}

div#overview h6 {
	color: {{ settings.overview_accent_text_color }};
}

div#overview input.field {
	color: {{ settings.overview_input_text_color }};
	font: italic 13px {{ settings.typography }};
}

div#overview input.field, div#finder input.field {
	font: {{ settings.font_style }} 13px {{ settings.typography }};
}

div#overview input.field:focus {
	color: {{ settings.overview_input_text_focus_color }};
}

div#footer {
	{% if settings.footer_bg_image == "none" %}background-image: none;
	background-color: {{ settings.footer_bg_color }};
	{% else %}background: {{ settings.footer_bg_color }} url({{ settings.footer_bg_image | asset_url }}) {{ settings.footer_bg_repeat }} {{ settings.footer_bg_position }};{% endif %}
}

div#footer p {
	color: {{ settings.footer_text_color }};
}

div#footer p a {
	color: {{ settings.footer_link_color }};
}

div#footer p a:hover {
	color: {{ settings.footer_link_hover }};
}

.additional-checkout-buttons {
  float:right;
  text-align:center;
  width:334px;
}

.additional-checkout-buttons p {
  margin: 12px 0;
}


/* End of Stylesheet */