<h1>{{ blog.title }}</h1>
{% paginate blog.articles by 7 %}

<div class="col-8  ">
{% for article in blog.articles %}
<div class="post">
    <div class="meta">
      <h2><a href="{{ article.url }}">{{ article.title }}</a></h2>
      <p class="date">{{ article.created_at | date: "%b %d %Y " }} {% if blog.comments_enabled? %}| 
      <a href="{{ article.url }}#comments">{{ article.comments_count }} comments</a></p> 
      {% endif %}
      
    </div><!-- .meta -->
    <div class="post-content ">
      {{ article.content }}
    </div><!-- .post-content  -->
</div><!-- .post -->

{% endfor %}

{% if paginate.pages > 1 %}

<div id="paginate">
{{ paginate | default_pagination }}
</div>

{% endif %}

{% endpaginate %}

 </div><!-- .col-8 -->

<div class="col-4 blog last">
{% include 'recent-posts' %}
</div><!-- col-4 last -->

