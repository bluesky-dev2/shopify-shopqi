/*
 * This is a manifest file that'll automatically include all the stylesheets available in this directory
 * and any sub-directories. You're free to add application-wide styles to this file and they'll appear at
 * the top of the compiled file, but it's generally better to create a new file per style scope.
 *= require jquery.fancybox-1.3.4
 *= require master
 *= require mobile
 *= require shopqi_signup
 *= require_self
*/

body, h1, h2, h3, h4, h5, h6 { /* 中文字体友好 */
  font-family: Arial,Tahoma,"hiragino sans gb",Helvetica;
}

ul#nav-primary li a.top-nav { /* fixed: ie6 nav height */
    color: #ddd;
    text-decoration: none;
    font-weight: normal;
    font-size: 12.5px;
    text-shadow: 1px 1px 1px #222;
    outline: none;
    text-shadow: 1px 1px 0.5px #000;
    color: #fff;
    float: left;
    height: 54px;
    line-height: 54px;
    padding: 0 20px; }

#faq p {
  margin-bottom: 20px; }

.loginarea form { /* 调整登录页面 */
  label {
    font-weight: bold;
    color: black;
    margin: 15px 0 5px 0; }
  input[type="text"], input[type="password"] {
    border: inherit;
    margin-bottom: 0 !important;
    background-color: white;
    padding: 3px;
    font-size: 14px; } }

.imgreplacement { /* 图片替换文字(文字隐藏) http://j.mp/qRhwk1 http://j.mp/qdddWA */
  display: -moz-inline-box;
  display: inline-block;
  background: transparent none 0 0 no-repeat;
  text-indent: -3000px;
  font: 0/0 Arial;
  overflow: hidden;
  color: rgba(255,255,255,0);
  vertical-align: bottom; }

ul#nav-primary li#nav-primary-phone {
  height: 54px;
  line-height: 54px;
  color: #a3a3a3;
  margin-right: 10px;

  .phone-400 {
    width: 110px;
    height: 34px;
    line-height: 34px;
    background: url(<%=asset_path('banners/400-phone.gif')%>) top right no-repeat; } }

.phone {
  width: 70px;
  height: 14px;
  line-height: 14px;
  background: url(<%=asset_path('banners/phone.gif')%>) top right no-repeat; }

.essential-features ul { /* 修正:特色演示内容显示大侧边栏下方 */
  width: 100%; }

#agreement { /* 服务条款 */
  width: 600px }

#error-404{
  padding: 100px 0;
  text-align: center;
  font-size: 18px;
  line-height: 28px!important;
  }

#new-container { /* 使用新的首页 */
  background-color: #e8e8e8;
  padding: 40px 0;
  border-top: 1px solid #fff;
  ul {
    list-style-type: none;
    overflow: auto;
    margin: 0;
    padding: 0;
    li {
      text-align: center;
      list-style-type: none;
      width: 220px;
      height: 200px;
      background: none;
      float: left;
      margin: 0;
      padding: 0;
      background: url(<%= image_path('background/separator.jpg') %>) 218px 15px no-repeat;
      &.last {
        background: none; }
      h4 {
        font-size: 18px;
        margin: 20px 0;
        a {
          color: #81aa48; }}
      p {
        text-align: left;
        padding: 0 35px;
        color: #2f3235;
      } } } }

table#price-chart {
  th.basic, th.professional, th.business, th.unlimited {
    height: 175px; } }

#bottom-signup {
  margin-top: 0 }
