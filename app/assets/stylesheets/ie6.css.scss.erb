.clearfix {
  zoom: 1;
  /* triggers hasLayout */
  display: block;
  /* resets display for IE/Win */ }

h1 {
  margin-top: -11px; }

/* IE6 rewrite "current" in main nav */

#masthead ul#nav-primary li.current {
  background: none;
  padding: 7px 0 0 0px;
  line-height: normal;
  margin-top: 0px;
  a {
    padding: 0px;
    background: none;
    display: block;
    height: auto;
    color: #6fc51b; } }

input {
  display: block;
  clear: both;
  margin-top: 10px; }

/* support request box on the contact page */

.sidebar-form {
  label {
    font-size: 10px;
    margin: 0px;
    padding: 0px;
    display: inline;
    line-height: 23px; }
  input {
    padding: 1px;
    float: left;
    margin: 10px 5px 0px 0px; } }

#signup {
  dd select {
    margin-bottom: 0; }
  #enable_paypal {
    display: inline;
    margin: 15px 0 5px; } }

.feature {
  padding: 5px !important;
  margin-left: 5px !important; }

#features {
  .col-3 {
    width: 200px; }
  width: 445px !important; }

#container .content .col-6 {
  margin-right: 0px; }

/* no padding for ie6 when you minimize the browser window */

.content {
  padding: 0; }

/* fixes the float issue in ie6 homepage */

#client-logos {
  float: left; }

.frontpage .col-6 {
  width: 365px; }

/* fixes the column issue in ie6 */

/* weird ie6 doesn't show background*/

#header {
  background: #4aa30d url('../assets/background/bg-header-frontpage.gif?1273087967') top left repeat-x;
  &.frontpage.createbluegreen {
    background: url('../assets/background/bg-bannergreentoblue.jpg?1273268734') repeat-x; } }

#subheader ul li {
  padding-left: 14px;
  img {
    display: none; } }

