.clearfix {
  zoom: 1;
  /* triggers hasLayout */
  display: block;
  /* resets display for IE/Win */ }

h1 {
  margin-top: -11px; }

/* IE6 rewrite "current" in main nav */

#masthead ul#nav-primary li.current {
  background: none;
  padding: 7px 0 0 0px;
  line-height: normal;
  margin-top: 0px;
  a {
    padding: 0px;
    background: none;
    display: block;
    height: auto;
    color: #6fc51b; } }

ul#nav-primary li#nav-primary-phone { /* fixed: 400 phone text height */
  padding-top: 20px; }

input {
  display: block;
  clear: both;
  margin-top: 10px; }

/* support request box on the contact page */

.sidebar-form {
  label {
    font-size: 10px;
    margin: 0px;
    padding: 0px;
    display: inline;
    line-height: 23px; }
  input {
    padding: 1px;
    float: left;
    margin: 10px 5px 0px 0px; } }

#signup {
  dd select {
    margin-bottom: 0; }
  .inline-form-select {
    margin: 10px 0 9px; } /* fixed: select province should not reset select height */
  #enable_paypal {
    display: inline;
    margin: 15px 0 5px; } }

.feature {
  padding: 5px !important;
  margin-left: 5px !important; }

#features {
  .col-3 {
    width: 200px; }
  width: 445px !important; }

#container .content .col-6 {
  margin-right: 0px; }

/* fixes the float issue in ie6 homepage */

#client-logos {
  float: left; }

.frontpage .col-6 {
  width: 365px; }

/* fixes the column issue in ie6 */

/* weird ie6 doesn't show background*/

#header {
  background: #4aa30d url(<%= asset_path 'background/bg-header-frontpage.gif' %>) top left repeat-x;
  &.frontpage.createbluegreen {
    background: url(<%= asset_path 'background/bg-bannergreentoblue.jpg' %>) repeat-x; } }

#subheader ul li {
  padding-left: 14px;
  img {
    display: none; } }
