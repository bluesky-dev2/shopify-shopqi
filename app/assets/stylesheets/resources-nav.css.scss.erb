/*This is the universal nav for every subsite EXCEPT for the main shopqi.com site*/

.resources-nav {
  height: 55px;
  background: url(<%= asset_path 'resources-nav/bg.png' %>);
  margin: 0 0 40px 0;
  padding: 0 20px;
  ul {
    padding: 0;
    width: 925px;
    height: 55px;
    margin: 0 auto;
    position: relative;
    ul {
      padding: 0;
      width: auto;
      height: auto;
      margin: 0;
      position: static; } }
  li {
    float: right;
    list-style: none;
    margin-right: 0px;
    line-height: 13px;
    a {
      color: #fff;
      font-size: 12.5px;
      font-family: helvetica, arial, sans-serif;
      padding: 21px 15px;
      display: block;
      margin: 0;
      border: 1px solid transparent;
      border-width: 0 1px;
      text-decoration: none;
      letter-spacing: 0.5px;
      &:hover, &:focus {
        color: #fff!important;
        background: #6B6B6B;
        /* old browsers */
        background: -moz-linear-gradient(top, #6b6b6b 0%, #6b6b6b 59%, #5b5b5b 100%);
        /* firefox */
        background: -webkit-gradient(linear, left top, left bottom, color-stop(0%, #6b6b6b), color-stop(59%, #6b6b6b), color-stop(100%, #5b5b5b));
        /* webkit */
        filter: progid:DXImageTransform.Microsoft.gradient(startColorstr='#6B6B6B', endColorstr='#5B5B5B',GradientType=0 );
        /* ie */ }
      &:active {
        background: #444; } }
    &.current a {
      background: #65b600 url(<%= asset_path 'resources-nav/bg-activelink.png' %>) repeat-x bottom;
      text-shadow: 1px 1px 0.5px #417f09;
      border-left: 1px solid #649e15;
      border-right: 1px solid #69a922;
      &:hover, &:active {
        color: #FFF; } }
    &.logo a {
      position: absolute;
      top: 0;
      left: 0;
      margin: 0;
      padding: 0px;
      line-height: 0px;
      border: 0px;
      height: 55px;
      width: 210px;
      text-indent: -99999px;
      background: url(<%= asset_path 'resources-nav/logo-shopqi.png' %>) no-repeat; } } }
