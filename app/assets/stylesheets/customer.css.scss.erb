/* clearfix */

.clearfix {
  &:before {
    content: "\0020";
    display: block;
    height: 0;
    overflow: hidden; }
  &:after {
    content: "\0020";
    display: block;
    height: 0;
    overflow: hidden;
    clear: both; }
  zoom: 1; }

