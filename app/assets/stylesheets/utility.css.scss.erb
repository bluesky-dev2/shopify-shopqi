/* *=UTILITY */

* html, body * {
  margin: 0;
  padding: 0; }

h1, h2, h3, h4, h5, h6 {
  color: #333; }

h1 {
  font-size: 180%;
  color: #555; }

h2 {
  font-size: 175%;
  margin: 15px 0 10px 0;
  border-bottom: 1px solid #eee;
  padding: 0 0 2px 0;
  color: #222;
  text-align: center;
  font-weight: normal;
  position: relative; }

h3 {
  font-size: 13px;
  margin-bottom: 2px;
  color: #333;
  &.divider {
    border-bottom: 1px solid #999; } }

h4 a {
  font-weight: normal;
  font-size: 110%;
  font-family: Helvetica, Arial, "Lucida Grande"; }

img {
  border: 0;
  vertical-align: middle; }

hr {
  border: 1px solid #ccc;
  border-top: 1px solid #eee; }

