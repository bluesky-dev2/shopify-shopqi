.shopqi-dialog {
  position: static; }

/* 修正弹出窗口border显示异常的问题 */

.sortable-placeholder {
  height: 31px; }

/* 链接拖动排序时目标位置的占位元素 */

.state {
  padding: 2px 6px;
  color: white;
  font-size: 10px;
  text-align: center;
  -webkit-border-radius: 3px;
  -moz-border-radius: 3px;
  border-radius: 3px;
  font-weight: normal;
  text-shadow: none;
  -moz-text-shadow: none;
  -webkit-text-shadow: none; }

.owner {
  background: #6CC644; }

/* placeholder css */

input.placeholder_text, textarea.placeholder_text, ::-webkit-input-placeholder {
  color: #FFFFFF; }

.item-payment {
  border-top: 1px solid #ddd; }

.ui-autocomplete {
  position: absolute;
  cursor: default;
  z-index: 4000 !important }

/* 支付页面 */
.gateway-select {
  input {
    vertical-align: middle;
    margin-left: 15px; }
  label {
    font-weight: normal;
    color: #777;
    font-size: 12px; } }

/* 订单页面 */
#order-table {
  .position-td {
    padding: 0 }
  .position {
    background: #3084CA; padding: 1px 4px; color: white; -moz-border-radius: 3px; -webkit-border-radius: 3px; }}
