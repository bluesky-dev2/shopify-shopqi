.content.subpage {
  margin-bottom: 30px; }

.clearfix {
  &:after {
    content: ".";
    display: block;
    clear: both;
    visibility: hidden;
    height: 0;
    line-height: 0; } }

#signup .clearfix { /* 修正: 特色演示底端链接所在div没有平铺开 */
  display: inline-block; }

* html .clearfix {
  height: 1%; }

html[xmlns] .clearfix {
  display: block; }

p {
  margin-bottom: 8px; }

form {
  label {
    margin: 0;
    font-size: 12px;
    color: #555;
    font-weight: normal; }
  select {
    font-size: 12px; }
  input {
    &[type="text"], &[type="password"] {
      display: block;
      background-color: transparent;
      padding: 5px 3px;
      margin-bottom: 22px !important;
      font-size: 12px;
      border-top: 1px #aeaeae solid;
      border-left: 1px #e1e1e1 solid;
      border-right: 1px #e1e1e1 solid;
      border-bottom: 1px #e9e9e9 solid;
      -moz-border-radius: 2px;
      -webkit-border-radius: 2px; }
    &[type="text"] {
      &:focus, &:active {
        border-top: 1px #90abb6 solid;
        border-left: 1px #abc4ce solid;
        border-right: 1px #abc4ce solid;
        border-bottom: 1px #d3dde1 solid;
        -moz-box-shadow: 0px 0px 3px #3084CA; } }
    &[type="password"] {
      &:focus, &:active {
        border-top: 1px #90abb6 solid;
        border-left: 1px #abc4ce solid;
        border-right: 1px #abc4ce solid;
        border-bottom: 1px #d3dde1 solid;
        -moz-box-shadow: 0px 0px 3px #3084CA; } } } }

input {
  &.input-text {
    position: relative;
    z-index: 2; }
  &.small {
    width: 116px !important; }
  &.medium {
    width: 158px !important; }
  &.large {
    width: 200px !important; }
  &.full {
    width: 334px !important; } }

label {
  position: relative;
  z-index: 1;
  display: block;
  &.inlined {
    padding-left: 8px;
    font-weight: normal;
    font-size: 12px;
    color: #888;
    opacity: 1;
    -webkit-transition: color 0.15s linear;
    -moz-transition: color 0.15s linear;
    -o-transition: color 0.15s linear;
    transition: color 0.15s linear;
    + input.input-text {
      margin-top: -22px; } }
  &.focus {
    color: #bbb; }
  &.has-text {
    opacity: 0.0;
    -webkit-transition-duration: 0s; } }

.section {
  margin: 0 0 30px 0;
  padding-bottom: 20px;
  border-bottom: 1px solid #eee; }

.active-section {
  background: #f5f5f5; }

.toggle {
  width: 300px;
  .hint {
    position: relative;
    z-index: 5; } }

.note {
  font-size: 12px; }

.hint {
  font-style: italic;
  font-size: 12px;
  font-family: Georgia, Times;
  color: #999;
  strong {
    color: #888; } }

.multi-input {
  margin-bottom: 7px;
  padding-top: 7px; }

.multi-input>span {
  float: left;
  margin-right: 10px; }

.inline-form-select {
  margin: -5px 0 9px; }

.message {
  color: #4f3613;
  background: #FFFBE5;
  font-size: 14px;
  text-align: center;
  margin: 20px 0px;
  border: 1px solid #eFeBd5;
  border-bottom: 1px solid #dFdBc5;
  border-right: 1px solid #dFdBc5;
  padding: 10px 15px;
  -moz-border-radius: 5px;
  -webkit-border-radius: 5px; }

.transparent {
  opacity: 0; }

.sidebox {
  width: 380px;
  position: absolute;
  right: 30px;
  background: #fafafa;
  border: 1px solid #ddd;
  color: #444;
  padding: 10px 15px;
  border-radius: 5px;
  -moz-border-radius: 5px;
  -webkit-border-radius: 5px;
  h4 {
    margin: 0 0 10px !important;
    .hint {
      font-weight: normal;
      font-size: 12px; } }
  p {
    margin-bottom: 25px; }
  label {
    display: block !important;
    color: #777 !important;
