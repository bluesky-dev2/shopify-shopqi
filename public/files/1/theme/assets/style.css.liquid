/* GLOBAL */

body {
  color:{{ settings.text_color }};
  background: {{ settings.backdrop }};
{% if settings.use_bg_image %}
  background-image: url({{ 'bg.gif' | asset_url }});
  background-position: {{ settings.bg_image_y_position }} {{ settings.bg_image_x_position }};
  background-repeat: {{ settings.bg_image_repeat }};
  background-attachment: {{ settings.bg_image_attachment }};
{% endif %}
  font-family: {{ settings.regular_font }};
}
	
a:link, a:visited, a:active {
	color: {{ settings.links_color }};
}

a:hover {
	color: {{ settings.links_color }};
}

h2 {
	color:{{ settings.header_color }};
        font-family: {{ settings.header_font }};
}

/* LAYOUT */

#frame {
	background-color: #fff;
}

#header {
  	background-color: #fff;
	background-image:url({%if settings.use_logo_image %}logo.png{% else %}header-blue.gif{%endif%});
         
}

#header h1 {
	color:#000;
}

#header a:link, #header a:visited, #header a:hover, #header a:active {
  	color: {{ settings.site_title_color }};
}

#footer{
       color: {{ settings.footer_text }};
}

#footer a:link, #footer a:visited, #footer a:active, #footer a:hover {
  	color: {{ settings.footer_links }};
}
		
#shopqi {
	color: #333;
	background-color:{{ settings.footer_nav_bg }};
}

/* PRODUCTS */

.product {
  	border: 1px solid #eee;
}

.product a:link, .product a:visited, .product a:active, .product a:hover {
  	text-decoration: none;
        color:{{ settings.header_color }};
}

.coll-desc {
  	background-color:#f9f9f9;
}

/* TOP NAVIGATION */

#navigation {
	background-color: {{ settings.top_nav_bg }};
	color: #fff
}

#navigation ul li a:link, #navigation ul li a:visited {
	color: {{ settings.top_nav_links }};
}

#navigation ul li a:hover {
	color: {{ settings.top_nav_links_hover }};
}

/* SIDEBAR */

#sidebar a, #sidebar a:visited{
        color: {{ settings.nav_link_color }};
}

#sidebar a:hover{
        color: {{ settings.nav_link_hover_color }};
}

#sidebar h3{
       color: {{ settings.side_header }};
}

#sidelinks li {
  	background-color: {{ settings.side_bg }};
  	border: 1px dashed #999;
}

#feature-sidebar {
  	background-color: {{ settings.side_bg }};
  	border: 1px dashed #999;
}

.featuring-image img {
  	background-color: #fff;
	border: 1px solid #999;
}

#bio {
  	background-color: {{ settings.side_bg }};
  	border: 1px dashed #999;
}

#searchbar {
  	background-color: {{ settings.side_bg }};
  	border: 1px dashed #999;
}

#cartside {
  	background-color: {{ settings.side_bg }};
  	border: 1px dashed #999;
}

/* TAGS */

#tags {
  	background-color:#f9f9f9;
}

/* INDEX.LIQUID */

#articles {
  	background-color: {{ settings.articles_bg }};
}

#articles h3 {
	color: #CC6699;
}

/* PRODUCT.LIQUID */

#product-main {
	border:dotted 1px #999;
}

.prod-img-small {
  	border: solid 1px #999;
}

#variant-add {
  	border-top: dashed 1px #999;
}

#description {
  	border-top:dashed 1px #999;
}

/* CART.LIQUID */

#shoppingcart {
  	border: 1px solid #eee;
}

#shoppingcart a:link, #shoppingcart a:visited, #shoppingcart a:active, #shoppingcart a:hover {
  	color: #666;
}

.total {
  	background-color:#f9f9f9;
}

/* BLOG.LIQUID */

.headline {
  	color: #333;
}

.title {
  	background: #fff url({{ 'headline.gif' | asset_url }}) top right no-repeat;
	height: 48px;
}

.date {
  	background: #fff url({{ 'date.gif' | asset_url }}) top left no-repeat;
  	color: #EA96AA;
}

.date h4 {
  	color: #EA96AA;
}

/* ARTICLE.LIQUID */

#comments h3 {
	color: #366da5;
}

#comment-form h3 {
	color: #366da5;
}

.notice, .hint {
color: #AC2F59;
}